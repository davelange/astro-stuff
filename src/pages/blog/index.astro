---
import Base from "../../layouts/Base.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
---

<Base>
  <h1 class="text-4xl font-bold text-indigo-100 mb-4 drop-shadow-glow">Content collections</h1>
  <p>From local MD files, using provided content APIs</p>

  <div class="flex flex-col gap-10 mt-10">
    {
      posts.map((post) => (
        <a href={`/blog/${post.slug}`}>
          <h2 class="font-bold text-xl mb-2">&rarr; {post.data.title}</h2>
          <p>{post.data.description}</p>
        </a>
      ))
    }
  </div>
</Base>
